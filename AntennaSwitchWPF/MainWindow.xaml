<Window x:Class="AntennaSwitchWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntennaSwitchWPF"
        mc:Ignorable="d"
        Title="Antenna Switch" Height="450" Width="800">
    <Grid>
        <Label x:Name="BandLabel" Content="Waiting for N1MM data..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Label x:Name="RxFrequencyLabel" Content="Waiting" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" Margin="0,40,0,2"/>
        <Label x:Name="TxFrequencyLabel" Content="Waiting" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" Margin="0,75,0,0"/>
    </Grid>
</Window>
